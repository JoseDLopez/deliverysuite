<style>
	.portfolio-item {
	    margin-bottom: 25px;
	}
</style>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
		    <h1 class="page-header"><%= @product.name %></h1>

		</div>
	</div>

	<div class="row">

		<div class="col-md-8">
			<img class="img-responsive" src="<%= @product.picture %>" alt="">
		</div>

		<div class="col-md-4">
			<%= link_to "Editar", edit_product_path, :class => "btn btn-info", :method => "get" %>
			<%= link_to "Eliminar", product_path, :class => "btn btn-danger", :method => "delete" %>
			<h3>Descripción del Producto</h3>
			<p><%= @product.description %></p>
			<h3>Detalles del producto</h3>
			<ul>
				<li><span class="detail_title">Precio:</span> <%= @product.price %></li>
				<li><span class="detail_title">Tiempo de Cocción:</span> <%= @product.time %></li>
			</ul>
			<h4>Categorías</h4>
			<ul>
				<% @product.categories.each do |c| %>
					<li><%= c.name %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>