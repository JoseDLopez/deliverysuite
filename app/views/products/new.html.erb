<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
	
		<div class="panel panel-default">
			<div class="panel-heading">
				<h1>Nuevo producto</h1>
			</div>


			<div class="panel-body">
				<%= form_for(@product) do |f| %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, autofocus: true, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :description %>
					<%= f.text_area :description, autofocus: true, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :time %>
					<%= f.number_field :time, autofocus: true, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :price %>
					<%= f.number_field :price, autofocus: true, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :picture %>
					<%= f.file_field :picture, autofocus: true, class: 'form-control' %>
				</div>
				<div class="form-group">
					<h3>Categor√≠as</h3>
					<%= f.select(:category_ids,Category.all.map{|c| [c.name, c.id]}, {}, { :multiple => true, :size => 5}) %>
				</div>
				<div class="actions text-center">
					<%= f.submit "Guardar", class: 'btn btn-primary btn-lg' %>
				</div>
				<% end %>		
			</div>


			<div class="panel-footer">
				
			</div>
		</div>

	</div>
</div>


