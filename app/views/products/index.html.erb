<style>
	.img-center {
	margin: 0 auto;
	width: 100px;
	height: 100px;
}
</style>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1 class="text-center">PRODUCTOS</h1>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<% @products.order(:id).each do |product| %>
			<div class="col-md-3 text-center">
				<img class="img-circle img-responsive img-center" src="<%= product.picture %>">
				<h3><%= product.name %></h3>
				<small><%= product.description %></small>
				<h5><%= link_to 'Detalles', product_path(product) %></h5>
			</div>
		<% end %>
	</div>		
</div>