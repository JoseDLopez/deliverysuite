<style>
	.img-center {
	margin: 0 auto;
	width: 200px;
	height: 200px;
}
</style>

<div class="row">
	<div class="col-md-12">
		<h1>Listado de Productos</h1>
		<% @products.each do |product| %>
			<div class="col-md-4 text-center">
				<img class="img-circle img-responsive img-center" src="<%= product.picture %>">
				<h3><%= product.name %></h3>
				<small><%= product.description %></small>
				<h5><%= link_to 'Detalles', product_path(product) %></h5>
			</div>
		<% end %>
	</div>		
</div>